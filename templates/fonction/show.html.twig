{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Fonctions{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/datatables-bs4/css/dataTables.bootstrap4.css')) }}">
{% endblock %}

{% block body_header %}
    {{ include('admin/_body_header.html.twig', {'domaine': 'Fonctions' , 'id' : fonction.id, 'index' : 'fonction_index'}) }}
{% endblock %}

{% block body %}

    <div class="row justify-content-center">
        <div class="col-sm-6">
            <div class="card ">
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                        <tr>
                            <th style="width:100px">Nom</th>
                            <td >{{ fonction.name }}</td>
                        </tr>

                        <tr>
                            <th>Afficher</th>
                            <td >
                                {% if fonction.enable %}
                                    <span class="text-success"><i class="fas fa-eye"></i></span>
                                {% else %}
                                    <span class="text-danger"><i class="fas fa-eye-slash"></i></span>
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col  d-flex justify-content-between align-items-center">
                            {{ include('share/__btn_return_list.html.twig',
                                {   'url':'fonction_index'
                                }) }}

                            {% if is_granted('ROLE_GESTIONNAIRE') %}

                                {{ include('share/__btn_edit.html.twig',
                                    {   'url':'fonction_edit',
                                        'id':fonction.id
                                    }) }}

                            {% endif %}

                            {{ include('share/_delete_form.html.twig',{'domaine': 'fonction','id':fonction.id}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

