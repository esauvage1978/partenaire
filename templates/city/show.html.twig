{% extends 'base.html.twig' %}

{% set title='Villes' %}
{% set route_index='city_index' %}
{% set entityName='city' %}
{% set entity=city %}

{% block title %}{{ parent() }} {{title}}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/datatables-bs4/css/dataTables.bootstrap4.css')) }}">
{% endblock %}

{% block body_header %}
    {{ include('admin/_body_header.html.twig', {domaine: title , id : entity.id, index :route_index}) }}
{% endblock %}

{% block sidebar_sommaire %}
    <li class="nav-item ">
        <a class="nav-link" href="#anchor_contact">
            <i class="fas fa-users"></i> Contacts
        </a>
    </li>
{% endblock %}

{% block sidebar_button %}
    {% if is_granted('ROLE_GESTIONNAIRE') %}

        {{ include('share/__btn_edit.html.twig',
            {   'url':entityName ~'_edit',
                'id':entity.id
            }) }}

        <span class="mb-3"></span>

        <span class="btn btn-danger " onclick="$('#delete').click();">
            <i class="fas fa-trash"></i> Supprimer
        </span>

    {% endif %}

    <span class="mb-3"></span>

    {{ include('share/__btn_export.html.twig',
        {   url:entityName ~'_export_partenaires',
            id:entity.id,
            title:'Exporter les partenaires'
        }) }}

    <span class="mb-3"></span>

    {{ include('share/__btn_return_list.html.twig',
        {   url:route_index
        }) }}
{% endblock %}



{% block body %}

    <div class="row justify-content-center">
        <div id="anchor_name" class="jumbotron col-12 text-center text-purple">
            <h3>
                {{ entity.name }}
            </h3>
            <small class="float-right">
                {% if entity.enable %}
                    <span class="text-success">Visible</span>
                {% else %}
                    <span class="text-danger">Masqu√©e</span>
                {% endif %}
            </small>
        </div>
        {{ include('share/_paginator.html.twig',{route:entityName ~'_show',id:entity.id}) }}
        <div class="row col-12 d-flex align-items-stretch justify-content-center" id="anchor_contact" >

            {% for partenaire in partenaires %}
                <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3  d-flex align-items-stretch" >
                    {{ include('partenaire/_view/_vignette.html.twig') }}
                </div>
            {% endfor %}
        </div>
        {{ include('share/_paginator.html.twig',{route:entityName ~'_show',id:entity.id}) }}
        <div class="d-none">
            {{ include('share/_delete_form.html.twig',{domaine: entityName ,id:entity.id}) }}
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script src="{{ absolute_url( asset('js/add_sidebar.js')) }}"></script>
{% endblock %}
