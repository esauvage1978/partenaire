{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Partenaire{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/datatables-bs4/css/dataTables.bootstrap4.css')) }}">
{% endblock %}

{% block body_header %}
    <div class="col">
        <h2 class="m-0 text-dark">
            Consultation d'un partenaire
        </h2>
    </div>
    <div class="col">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Page d'accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('partenaire_index') }}">Liste</a></li>
            <li class="breadcrumb-item active">{{ partenaire.id }}</li>
        </ol>
    </div>
{% endblock %}

{% block sidebar_sommaire %}
    <li class="nav-item ">
        <a class="nav-link" href="#anchor_name">
            <i class="fa fa-database"></i> Info. générales
        </a>
    </li>

    {% if partenaire.referent %}
    <li class="nav-item ">
        <a class="nav-link" href="#anchor_referent">
            <i class="fa fa-users"></i> Référent
        </a>
    </li>
    {% endif %}
{% endblock %}

{% block sidebar_button %}
    {% if is_granted('ROLE_GESTIONNAIRE') %}

        {{ include('share/__btn_edit.html.twig',
            {   'url':'partenaire_edit',
                'id':partenaire.id
            }) }}

        <span class="mb-3"></span>

        <span class="btn btn-danger " onclick="$('#delete').click();">
            <i class="fas fa-trash"></i> Supprimer
        </span>

    {% endif %}

    <span class="mb-3"></span>

    {{ include('share/__btn_return_list.html.twig',
        {   'url':'partenaire_index'
        }) }}
{% endblock %}



{% block body %}

    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-9">
            <div class="card card-primary">
                {{ include('partenaire/_show/_name.html.twig') }}
                <div class="card-body row">
                    <div class="row d-flex justify-content-around align-items-center col-12">
                        {{ include('partenaire/_show/_circonscription.html.twig') }}
                        {{ include('partenaire/_show/_adresse.html.twig') }}
                        {{ include('partenaire/_show/_mail.html.twig') }}
                        {{ include('partenaire/_show/_phone.html.twig') }}
                    </div>
                    <div class="col-12">
                        {{ include('partenaire/_show/_content.html.twig') }}

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-4">
                    {{ include('partenaire/_show/_referent.html.twig') }}
                </div>
            </div>
        </div>
        <div class="d-none">
            {{ include('share/_delete_form.html.twig',{'domaine': 'partenaire','id':partenaire.id}) }}
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script src="{{ absolute_url( asset('js/add_sidebar.js')) }}"></script>
{% endblock %}
