<div class="card-body">
    <div class="form-group row">
        {{ form_label(form.name,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
        <div class="col">
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="{{ form.enable.vars.id }}">
            Afficher
        </label>
        <div class="col mt-1">
            {{ form_row(form.enable) }}
        </div>
    </div>
    {% if form.contacts is defined %}
    <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="{{ form.contacts.vars.id }}">
            Contacts
        </label>
        <div class="col-7">
            {{ form_widget(form.contacts) }}
        </div>
    </div>
    {% endif %}
    <div class="d-none">
        <button name="update" id="update">{{ button_label|default('Save') }}</button>
    </div>

</div>