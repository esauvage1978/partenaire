{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Contact{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/datatables-bs4/css/dataTables.bootstrap4.css')) }}">
{% endblock %}

{% block body_header %}
    <div class="col">
        <h2 class="m-0 text-dark">
            {% if contact.civilite %}
                {{ contact.civilite.name }}
            {% endif %} {{ contact.name }}
        </h2>
    </div>
    <div class="col">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Page d'accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('contact_index') }}">Liste</a></li>
            <li class="breadcrumb-item active">{{ contact.id }}</li>
        </ol>
    </div>
{% endblock %}

{% block sidebar_sommaire %}

{% endblock %}

{% block sidebar_button %}
    {% if is_granted('ROLE_GESTIONNAIRE') %}

        {{ include('share/__btn_edit.html.twig',
            {   'url':'contact_edit',
                'id':contact.id
            }) }}

        <span class="mb-3"></span>

        <span class="btn btn-danger " onclick="$('#delete').click();">
            <i class="fas fa-trash"></i> Supprimer
        </span>

    {% endif %}

    <span class="mb-3"></span>

    {{ include('share/__btn_return_list.html.twig',
        {   'url':'contact_index'
        }) }}
{% endblock %}



{% block body %}

    <div class="row justify-content-center">
            <div class="col-sm-6 col-md-6 col-lg-6" >
                {{ include('contact/_view/_vignette.html.twig') }}
                {{ include('contact/_show/_partenaires.html.twig') }}
                {{ include('contact/_show/_referent.html.twig') }}
            </div>

        <div class="d-none">
            {{ include('share/_delete_form.html.twig',{'domaine': 'contact','id':contact.id}) }}
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script src="{{ absolute_url( asset('js/add_sidebar.js')) }}"></script>
{% endblock %}
