<div class="card-body">
    <div class="form-group row ">
        <div class="col-3 col-form-label">
        {{ form_label(form.civilite) }}
        </div>
        <div class="col-8 pr-4">
            {{ form_widget(form.civilite) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.name,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
        <div class="col">
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="{{ form.enable.vars.id }}">
            Afficher
        </label>
        <div class="col mt-1">
            {{ form_row(form.enable) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.fonction,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
        <div class="col-8 pr-4">
            {{ form_widget(form.fonction) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.phone1,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
        <div class="col">
            {{ form_errors(form.phone1) }}
            {{ form_widget(form.phone1) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.phone2,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
        <div class="col">
            {{ form_errors(form.phone2) }}
            {{ form_widget(form.phone2) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.mail1,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
        <div class="col">
            {{ form_errors(form.mail1) }}
            {{ form_widget(form.mail1) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.mail2,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
        <div class="col">
            {{ form_errors(form.mail2) }}
            {{ form_widget(form.mail2) }}
        </div>
    </div>
    {{ form_row(form.content) }}
    <div class="d-none">
        <button name="update" id="update">{{ button_label|default('Save') }}</button>
    </div>

</div>