<table id="tableAdministration" class="table table-striped projects  bg-white"
       style="width:100%">
    <thead>
    <tr>
        <th class="align-middle">Civilité</th>
        <th class="align-middle">Nom</th>
        <th class="align-middle">Fonction</th>
        <th class="align-middle">téléphone principal</th>
        <th class="align-middle">téléphone secondaire</th>
        <th class="align-middle">Mail principal</th>
        <th class="align-middle">Mail secondaire</th>
        <th class="align-middle">Rôles</th>
        <th class="align-middle">Description</th>
    </tr>
    </thead>
    <tbody>
    {% for contact in contacts %}
        <tr>
            <td class="align-middle">
                {% if contact.civilite %}
                    {{ contact.civilite.name }}
                {% else %}
                    /
                {% endif %}
            </td>
            <td class="align-middle">
                <a href="{{ path('contact_show',{id:contact.id}) }}">
                    {{ contact.name }}
                </a>
            </td>
            <td class="align-middle">
                {% if contact.fonction %}
                    {{ contact.fonction.name }}
                {% else %}
                    /
                {% endif %}
            </td>
            <td class="text-center  align-middle">
                {{ contact.phone1 }}
            </td>
            <td class="text-center  align-middle">
                {{ contact.phone2 }}
            </td>
            <td class="talign-middle">
                {% if contact.mail1 %}
                    <a href="mailto:// {{ contact.mail1 }}">
                        {{ contact.mail1 }}
                    </a>
                {% endif %}
            </td>

            <td class="talign-middle">
                {% if contact.mail2 %}
                    <a href="mailto:// {{ contact.mail2 }}">
                        {{ contact.mail2 }}
                    </a>
                {% endif %}
            </td>
            <td class="project-actions text-right">
                {% for role in contact.roles %}
                    {{ role.name }}
                {% endfor %}

            </td>
            <td class="project-actions text-right">
                {{ contact.content |raw}}

            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="8">Aucun d'enregistrement</td>
        </tr>
    {% endfor %}
    </tbody>
</table>