<div class="col">
    <div class="card ">
        <div class=" card-header bg-purple ">
            <span class="card-title d-flex align-items-center {{ contact.enable?'':'text-danger' }}">
                <i class="fas fa-users mr-2 fa-2x"></i>
                <a class="text-white pl-2" href="{{ path('contact_show',{id:contact.id}) }}" title="Affiche le dÃ©tail de ce contact">
                    {% if contact.civilite %}
                        {{ contact.civilite.name }}
                    {% endif %} {{ contact.name }}
                </a>
            </span>
        </div>
        <div class="card-body ">
            <h2 class="lead">
                {% if contact.fonction %}
                    <span class="text-muted float-right">
                        <a href="{{ path('fonction_show',{id:contact.fonction.id}) }}">
                            {{ contact.fonction.name }}
                        </a>
                    </span>
                {% endif %}
            </h2>
            <hr/>
            {% if contact.roles %}
                <div class="row">
                    {% for role in contact.roles %}
                        <a class="m-1 btn btn-default" href="{{ path('role_show',{id:role.id}) }}">
                            {{ role.name }}
                        </a>
                    {% endfor %}
                </div>
            {% endif %}
            <ul class="ml-4  fa-ul">

                {% if contact.phone1 %}
                    <li class="mt-2">
                        <span class="fa-li"><i class="fas fa-lg fa-phone"></i></span>
                        {% if contact.phone1 %}
                            {{ contact.phone1 }}
                        {% endif %}
                    </li>
                {% endif %}
                {% if contact.phone2 %}
                    <li class="mt-2">
                        <span class="fa-li"><i class="fas fa-lg fa-phone"></i></span>
                        {% if contact.phone2 %}
                            {{ contact.phone2 }}
                        {% endif %}
                    </li>
                {% endif %}
                {% if contact.mail1 %}
                    <li class="mt-2">
                        <span class="fa-li"><i class="far fa-lg fa-envelope"></i></span>
                        {% if contact.mail1 %}
                            <a href="mailto:// {{ contact.mail1 }}">
                                {{ contact.mail1 }}
                            </a>
                        {% endif %}
                    </li>
                {% endif %}
                {% if contact.mail2 %}
                    <li class="mt-2">
                        <span class="fa-li"><i class="far fa-lg fa-envelope"></i></span>
                        {% if contact.mail2 %}
                            <a href="mailto:// {{ contact.mail2 }}">
                                {{ contact.mail2 }}
                            </a>
                        {% endif %}
                    </li>
                {% endif %}
            </ul>

        </div>

        {% if contact.content %}
            <div class="card-footer">
                <p class="text-muted text-sm">{{ contact.content |raw }} </p>
            </div>
        {% endif %}

    </div>
</div>
