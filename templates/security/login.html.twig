{% extends 'base.html.twig' %}


{% block title %}
    {{ parent() }} - Connexion
{% endblock %}


{% block body_header %}
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-xs-12 col-lg-6  ">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Merci de vous connecter</h3>
                </div>
                <div class="card-body ">

                    <form class="form-horizontal" method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Vous êtes déjà connecté {{ app.user.name }}, <a href="{{ path('user_logout') }}">
                                    Déconnexion ?</a>
                            </div>
                        {% endif %}
                        <div class="form-group row">
                            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-10">
                                <input type="text" value="{{ last_username }}"
                                       placeholder="Email" name="email" id="inputEmail"
                                       class="form-control" required autofocus>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-2 col-form-label">Mot de passe</label>
                            <div class="col-sm-10">
                                <input type="password" name="password" id="inputPassword" class="form-control"
                                       placeholder="Mot de passe" required>
                            </div>
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <div class="checkbox mb-3 text-right">
                            <label >
                                <input type="checkbox" name="_remember_me"><em> Se souvenir de moi ?</em>
                            </label>
                        </div>
                        <p class="text-center">
                            <button class="btn btn-lg btn-info  mb-4" id="login" name="login" type="submit">
                                Connexion
                            </button>
                        </p>
                    </form>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-12 d-flex justify-content-start">
                    <h5>
                        <a href="{{ path('profil_registration') }}"
                           title="Créer un compte">
                            {{ 'Créer un compte' }}
                        </a>
                    </h5>
                    <label class="ml-3 mr-3">|</label>
                    <h5>
                        <a id="forget"
                           href="{{ path('profil_password_forget') }}" title="Password forget?">
                            {{ 'Mot de passe oublié ?' }}
                        </a>
                    </h5>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
