{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Recover the password' | trans }}
{% endblock %}



{% block bodytoptitle %}
    {{ 'Recover the password' | trans }}
{% endblock %}
 
{% block body %}
    <div class="row justify-content-center">
        <div class="col-xs-12 col-lg-6  ">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Récupérer le mot de passe</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="form-group row">
                        {{ form_label(form.plainPassword,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
                        <div class="col">
                            {{ form_errors(form.plainPassword) }}
                            {{ form_widget(form.plainPassword) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(form.plainPasswordConfirmation,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
                        <div class="col">
                            {{ form_errors(form.plainPasswordConfirmation) }}
                            {{ form_widget(form.plainPasswordConfirmation) }}
                        </div>
                    </div>

                    <p class="text-center">
                        <button name="recover" id="recover" class="btn btn-primary mb-4">
                            Modifier
                        </button>
                    </p>
                    {{ form_end(form) }}


                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-12 d-flex justify-content-start">
                    <h5>
                        <a href="{{ path('user_login') }}"
                           title="Déjà un compte ?">
                            Déjà un compte ?
                        </a>
                    </h5>
                </div>
            </div>
        </div>
    </div>
{% endblock %}