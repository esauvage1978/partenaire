{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Changer votre mot de passe {% endblock %}

{% block body_header %}
    {{ include ('profil/_profil_body_header.html.twig', {'domaine':'Mot de passe'}) }}
{% endblock %}
 
{% block body %}
    <div class="row justify-content-center">
        <div class="col-xs-12 col-lg-6  ">

            <div class="card card-info">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.plainPasswordOld) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.plainPassword) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.plainPasswordConfirmation) }}
                            </div>
                        </div>

                        <p class="text-center">
                            <button name="change" id="recover" class="btn btn-primary mb-4">
                                Mettre à jour
                            </button>
                        </p>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}